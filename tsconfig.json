{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "jsx": "react"
    },
    "include": [
        "src/**/*.tsx?",
        "test/*.tsx?"
    ],
    "exclude": [
        "node_modules"
    ]
}