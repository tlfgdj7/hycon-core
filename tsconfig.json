{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs":true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
        "test/*"
    ],
    "exclude": [
        "node_modules"
    ]
}